<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="esi.system.model.NecessidadesEspeciais" 
           table="necessidades_especiais">
        <id name="matricula" type="int">
            <column name="alunos_matricula"/>
        </id>
        <property name="visual" type="int">
            <column name="visual" not-null="false"/>
        </property>
        <property name="auditiva" type="int">
            <column name="auditiva" not-null="false"/>
        </property>
        <property name="fisica" type="int">
            <column name="fisica" not-null="false"/>
        </property>
        <property name="mental" type="int">
            <column name="mental" not-null="false"/>
        </property>
        <property name="multipla" type="int">
            <column name="multipla" not-null="false"/>
        </property>
        <property name="altasHabilidades" type="int">
            <column name="altasHabilidades" not-null="false"/>
        </property>
        <property name="condutasTipicas" type="int">
            <column name="condutasTipicas" not-null="false"/>
        </property>
        <property name="outra" type="int">
            <column name="outra" not-null="false"/>
        </property>
    </class>
</hibernate-mapping>