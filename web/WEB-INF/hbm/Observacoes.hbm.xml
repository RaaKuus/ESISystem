<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="esi.system.model.Observacoes"
           table="observacoes_matricula">
        <id name="matricula" type="int">
            <column name="alunos_matricula"/>
        </id>
        <property name="observacoes" type="string">
            <column name="observacoes" not-null="false"/>
        </property>
    </class>
</hibernate-mapping>